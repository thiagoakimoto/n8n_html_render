{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "memory": 3008,
      "runtime": "nodejs18.x"
    }
  },
  "regions": ["gru1"],
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api" }
  ]
}